<% if flash[:success].present? %>
      <div class="alert alert-success my-3">
        <%= flash[:success] %>
      </div>
    <% elsif flash[:error].present? %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>
<%= form_for(@post.comments.new, url: user_post_comments_path(@user, @post)) do |form| %>
    <div class="mb-3">
      <%= form.label :text, class: "form-label" %>
      <%= form.text_area :text, class: "form-control", placeholder: "Enter your comment here" %>
    </div>
    <div class="actions">
      <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
  <% end %>